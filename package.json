{
	"name": "project-da-vinci-vs-code-extension",
	"displayName": "Project Da Vinci VS Code Extension",
	"description": "Project Da Vinci VS Code Extension",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.50.0"
	},
	"license": "MIT",
	"publisher": "ProjectDaVinci",
	"icon": "https://github.com/lilith-avatar/vscode-extension/raw/master/logo.png",
	"categories": [
		"Snippets",
		"Other",
		"Programming Languages",
		"Formatters",
		"Themes"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lilith-avatar/vscode-extension.git"
	},
	"activationEvents": [
		"onCommand:project-da-vinci-vs-code-extension.helloDaVinci",
		"onView:fileExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "project-da-vinci-vs-code-extension.helloDaVinci",
				"title": "Hello Da Vinci"
			},
			{
				"command": "fileExplorer.refreshFile",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "fileExplorer.openFile",
				"title": "Open File"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "fileExplorer",
					"name": "Da Vinci File Tree"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "fileExplorer.refreshFile",
					"when": "view == fileExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "fileExplorer.refreshFile",
					"when": "view == fileExplorer && viewItem == file",
					"group": "inline"
				}
			]
		}
	},

	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"optionalDependencies": {
		"fsevents": "^2.2.0"
	},
	"dependencies": {
		"jsonc-parser": "^2.3.1",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
